                    </li>
                  {%- endfor -%}
                </ul>
              </li>
            {% endif %}
          {%- endfor -%}
        {% endif %}
        <a href="{{ routes.cart_url }}">
          <i class="fas fa-shopping-cart"></i>
        </a>
        {%- if shop.customer_accounts_enabled -%}
          <a href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}">
            <i class="fas fa-user"></i>
          </a>
        {%- endif -%}
      </ul>
    </header>
