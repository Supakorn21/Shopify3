
{% case section.settings.header_type %}
  {% when "header1" %}
      <header class="header header1">
          <ul class="header1__collections-nav">
            {% if section.settings.menu != blank %}
               {%- for link in section.settings.menu.links -%}
                  {% if link.links == blank %}
                       <li class="header1__collection-link">
                        <a href="{{ link.url }}">{{ link.title }}</a>
                        </li>
                  {% else %}
                    <li class="header1__collection-link">
                      <a href="{{ link.url }}">{{ link.title }} <i class="fas fa-chevron-down"></i></a>
                      <ul class="collection-link__sub-links">
                        {%- for sublink in link.links -%}
                          <li><a href="{{ sublink.url }}">{{ sublink.title }}</a></li>
                        {%- endfor -%}
                      </ul>
                    </li>
                  {% endif %}
                {%- endfor -%}
              {% endif %}
          </ul>
          <div class="header1__logo"><a href="/">Company</a></div>
          <ul class="header1__collections-nav">
            <li class="header1__collection-link">
              <a href="/link">Link top <i class="fas fa-chevron-down"></i></a>
              <ul class="collection-link__sub-links">
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
                <li><a href="#">Link</a></li>
              </ul>
            </li>
            <li class="header1__collection-link"><a href="/link">Link</a></li>
            <li class="header1__collection-link"><a href="/link">Link</a></li>
            <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
            <a href="/cart"><i class="fas fa-user"></i></a>
          </ul>
      </header>
  {% when "header2" %}
      <header class="header header2">
        <div class="header2__logo"><a href="/">Company</a></div>
        <ul class="header2__collections-nav">
          <li class="header2__collection-link">
            <a href="/link">Link top <i class="fas fa-chevron-down"></i></a>
            <ul class="collection-link__sub-links">
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
            </ul>
          </li>
          <li class="header2__collection-link"><a href="/link">Link</a></li>
          <li class="header2__collection-link"><a href="/link">Link</a></li>
        </ul>
        <div class="header2__collections-nav">
          <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
          <a href="/cart"><i class="fas fa-user"></i></a>
        </div>
      </header>
  {% when "header3" %}
      <header class="header header3">
        <div class="header3__logo"><a href="/">Company</a></div>
        <ul class="header3__collections-nav">
          <li class="header3__collection-link">
            <a href="/link">Link top <i class="fas fa-chevron-down"></i></a>
            <ul class="collection-link__sub-links">
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
              <li><a href="#">Link</a></li>
            </ul>
          </li>
          <li class="header3__collection-link"><a href="/link">Link</a></li>
          <li class="header3__collection-link"><a href="/link">Link</a></li>
          <a href="/link" class="header3__collection-link">Link</a>
          <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
          <a href="/cart"><i class="fas fa-user"></i></a>
        </ul>
      </header>
  {% when "header4" %}
        <header class="header header4 fixed-nav">
    <div class="header4__logo"><a href="/">Shirt By TNX</a></div>
