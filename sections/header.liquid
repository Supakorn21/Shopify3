{% case section.settings.header_type %}
  {% when "header1" %}
    <header class="header header1 header1__{{ section.settings.menu_color_scheme }} ">
      <ul class="header1__collections-nav">
        {% if section.settings.menu != blank %}
          {%- for link in section.settings.menu.links -%}
            {% if link.links == blank %}
              <li class="header1__collection-link">
                <a  href="{{ link.url }}">{{ link.title }}</a>
              </li>
            {% else %}
              <li class="header1__collection-link">
                <a href="{{ link.url }}">{{ link.title }}
                  <i class="fas fa-chevron-down"></i>
                </a>
                <ul class="collection-link__sub-links">
                  {%- for sublink in link.links -%}
                    <li>
                      <a href="{{ sublink.url }}">{{ sublink.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              </li>
            {% endif %}
          {%- endfor -%}
        {% endif %}
      </ul>
      <div class="header1__logo">
        <a href="{{ routes.root_url }}">
          {%- if settings.logo != blank -%}
            <div class="header__heading-logo-wrapper">
              {%- assign logo_alt = settings.logo.alt | default: shop.name | escape -%}
              {%- assign logo_height = settings.logo_width | divided_by: settings.logo.aspect_ratio -%}
              {% capture sizes %}(min-width: 750px) {{ settings.logo_width }}px, 50vw{% endcapture %}
              {% capture widths %}{{ settings.logo_width }}, {{ settings.logo_width | times: 1.5 | round }}, {{ settings.logo_width | times: 2 }}{% endcapture %}
              {{ settings.logo | image_url: width: 600 | image_tag: class: 'header__heading-logo', widths: widths, height: logo_height, width: settings.logo_width, alt: logo_alt, sizes: sizes, preload: true
              }}
            </div>
          {%- else -%}
            {{ shop.name }}
          {%- endif -%}
        </a>
      </div>
      <ul class="header1__collections-nav">
        {% if section.settings.menu_two != blank %}
          {%- for link in section.settings.menu_two.links -%}
            {% if link.links == blank %}
              <li class="header1__collection-link">
